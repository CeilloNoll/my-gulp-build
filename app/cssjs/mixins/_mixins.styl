@import 'nib'
@import 'rupture'

rupture.scale =       0    576px    768px    992px    1200px
rupture.scale-names =  'xs'     'sm'     'md'     'lg'      'xl'

flex-version = flex
support-for-ie = false
vendor-prefixes = official

rem() {
	remified = ()
	for arg in arguments {
		push(remified, unit(arg/16, 'rem'))
	}
	return remified
}

cmsTpl = '/'

font-url(file)
	return cmsTpl + 'css/fonts/' + file

webfont(family, file, weight, hack-chrome-windows = false)
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
		url(font-url(file + '.woff')) format('woff'),
		url(font-url(file + '.ttf')) format('truetype')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio: 0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#' + family)) format('svg')

min_size()
	min-width arguments[0]
	min-height arguments[1] || arguments[0]

max_size()
	max-width arguments[0]
	max-height arguments[1] || arguments[0]

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px

//animations
fillAnimationMxn()
	position relative
	transition .2s
	overflow hidden

	&:before
		content ''
		position absolute
		top 0
		left -30px
		z-index 1
		width 0
		height 100%
		background #ff881d
		transform skewX(45deg)
		transition .4s

	span
		position relative
		z-index medLevel

	&:hover
		&:before
			width 140%

@keyframes pulse
	0%
		transform scale(1)
		opacity 0
	50%
		opacity .4
	100%
		transform scale(1.5)
		opacity 0


//normalize

a
	display block
	text-decoration none
	color inherit

	&:hover
		color inherit
		text-decoration none

*:focus,
button:focus,
textarea:focus,
input:focus
	outline none
	box-shadow none

img
	width 100%
	height auto

// Colors
blcColor = #272727

//z-index levels
bkLevel = -1
bsLevel = 1
medLevel = 5
hiLevel = 10
tpLevel = 20